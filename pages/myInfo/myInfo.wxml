<view class='top'>
    <open-data type="userAvatarUrl"></open-data>
</view>
<form bindsubmit="saveMyInfo">
    <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells__title">请编辑您的个人信息</view>
            <view class="weui-cells weui-cells_form">
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">昵称</label>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="username" class="weui-input" placeholder="输入您的昵称" placeholder-class="weui-input__placeholder" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
                    <view class="weui-cell__hd">
                        <label class="weui-label">性别</label>
                    </view>
                    <view class="weui-cell__bd">
                        <picker aria-role="combobox" bindchange="bindPicker3Change" range="{{sexOptions}}">
                            <view class="weui-select">{{sexOptions[0]}}</view>
                        </picker>
                    </view>
                </view>
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <view class="weui-label" id="js_date" aria-hidden="true">生日</view>
                    </view>
                    <view class="weui-cell__bd">
                        <picker mode="date" aria-role="combobox" aria-labelledby="js_date" value="{{date}}"
                            start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                            <view class="weui-input">{{date}}</view>
                        </picker>
                    </view>
                </view>
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">职业</label>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" placeholder="输入您的职业" placeholder-class="weui-input__placeholder" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">联系电话</label>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" placeholder="填写联系方式" type="number"
                            placeholder-class="weui-input__placeholder" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">联系地址</label>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" placeholder="填写联系地址" type="string"
                            placeholder-class="weui-input__placeholder" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">兴趣爱好</label>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" placeholder="请输入兴趣爱好" type="string"
                            placeholder-class="weui-input__placeholder" />
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="weui-form__opr-area">
        <!--a aria-role="button" class="weui-btn weui-btn_primary" form-type="submit">确定</a-->
        <button form-type="submit" class="weui-btn weui-btn_primary">确定</button>
    </view>
</form>