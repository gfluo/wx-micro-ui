<!--pages/myintro/myintro.wxml-->
<form bindsubmit="introSubmit">
    <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells__title">自我介绍</view>
        <view class="weui-cells weui-cells_form">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea name="textarea" value="{{intro}}" class="weui-textarea" placeholder="简单写写您自己吧！"
                        placeholder-class="weui-input__placeholder" rows="5"></textarea>
                    <view aria-role="option" class="weui-textarea-counter"><span>0</span>/200</view>
                </view>
            </view>
            <view class="weui-form__opr-area">
                <button form-type="submit" class="weui-btn weui-btn_primary" aria-role="button"> 提交 </button>
            </view>
        </view>
    </view>
</form>